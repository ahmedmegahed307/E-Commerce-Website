@model List<ReviewsModel>
<!DOCTYPE html>
<html lang="en">


<body>


    <!-- breadcrumb start -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="page-title">
                        <h2></h2>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <!-- breadcrumb End -->
    <!-- section start -->
    @foreach (var item in Model)
    {
        <section class="section-b-space blog-detail-page review-page">
            <div class="container">

                <div class="row">

                    <div class="col-sm-12">
                        <ul class="comment-section">
                            <li>
                                <div class="media">
                                    <img src="../assets/images/icon/users.png" alt="Generic placeholder image">
                                    <div class="media-body">
                                        <h3>@item.FirstName @item.LastName <span>(Topic: @item.topicname (@item.mydate))</span></h3>
                                        <h5>
                                            @item.Message
                                        </h5>
                                        <ul class="comnt-sec">
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-thumbs-o-up"
                                                       aria-hidden="true"></i><span>(14)</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <div class="unlike">
                                                        <i class="fa fa-thumbs-o-down"
                                                           aria-hidden="true"></i>(2)
                                                    </div>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>

                        </ul>
                    </div>

                </div>
                
            </div>
        </section>
<hr />    }
        <!-- Section ends -->


    </body>

</html>